#include <iostream>
#include <vector>
#include <algorithm>
#include <climits>
#include <string>
#include <cmath>

using namespace std;

int main() {
    ios::sync_with_stdio(false);
    cin.tie(nullptr);

    int n;
    cin >> n;
    int arr[n];
    for (int i=0; i<n; i++) {
        cin >> arr[i];
    }

    int currsum=0;
    int maxsum = INT_MIN;

    for (int i=0; i<=n; i++) {
        currsum += i;
        maxsum = max(currsum, maxsum);
        if (currsum<0) {
            currsum=0;
        }
    }

    cout << maxsum << " ";



    return 0;
}



OUTPUT:
5
1 2 3 4 5

15
